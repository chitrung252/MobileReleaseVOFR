<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lnl_row_product_ar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dp30"
    android:padding="5dp"
    android:background="@drawable/linear_border_background"
    android:layout_marginTop="@dimen/dp20"
    android:layout_marginLeft="@dimen/dp5">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_loading_2"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/loading_2"
        android:visibility="gone"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/lnl_product_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img_product_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Kính đen Bojon"
                android:gravity="center"
                android:textSize="@dimen/dp10"
                android:textColor="@color/color_white"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_ban"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_ban"
            android:layout_margin="@dimen/dp5"
            android:padding="@dimen/dp10"
            android:visibility="gone"
            />
    </FrameLayout>


</LinearLayout>