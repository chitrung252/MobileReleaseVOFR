<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FinishFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginRight="25dp"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:textStyle="bold"
            android:text="Địa chỉ người nhận"
            android:textSize="15sp"
            android:textColor="@color/color_cus_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="75dp">
            <TextView
                android:id="@+id/txt_address_finish"
                android:textStyle="bold"
                android:gravity="center|center_horizontal"
                android:textColor="@color/color_black"
                android:text="496/18 Lê Xuân Oai,Phường Long Thành,Quận 9,Thành Phố Hồ Chí Minh "
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_marginRight="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp15"
            android:textStyle="bold"
            android:text="Hình thức thanh toán"
            android:textSize="15sp"
            android:textColor="@color/color_cus_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="52dp">
            <TextView
                android:id="@+id/txt_method_finish"
                android:textStyle="bold"
                android:gravity="center|center_horizontal"
                android:textColor="@color/color_black"
                android:text="Thanh toán khi giao hàng"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_marginRight="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:textStyle="bold"
            android:text="Địa chỉ người nhận"
            android:textSize="15sp"
            android:textColor="@color/color_cus_light_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>