<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.IntroActivity"
    android:orientation="vertical"
    android:id="@+id/lnl_intro"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/vector"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp30"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:text="Phòng thử "
                    android:textColor="@color/color_white"
                    style="@style/textViewMuliExtraBold"
                    android:textAppearance="@style/text_intro"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:text="Đồ ảo"
                    android:textColor="@color/color_white"
                    style="@style/textViewMuliExtraBold"
                    android:textAppearance="@style/text_intro"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:text="AR"
                    android:textColor="@color/color_white"
                    style="@style/textViewMuliExtraBold"
                    android:textAppearance="@style/text_intro"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/vector2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2019. VOFR Team. All Rights Reserved"
            android:gravity="center"
            style="@style/ABeeZee"
            android:textColor="@color/color_cus_gray"
            android:layout_marginTop="@dimen/dp50"
            />
    </LinearLayout>
</LinearLayout>