<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:id="@+id/lnl_login"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/group_12"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/img3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textSize="@dimen/dp30"
        android:textColor="@color/color_cus_blue"
        android:layout_marginLeft="@dimen/dp10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Đăng Nhập"
            android:textColor="@color/color_cus_light_gray"/>
        <EditText
            android:paddingTop="5dp"
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_user_menu"
            android:drawablePadding="@dimen/dp20"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu"
            android:textColor="@color/color_cus_light_gray"
            android:layout_marginTop="@dimen/dp10"/>
        <EditText
            android:paddingTop="5dp"
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_password2"
            android:drawablePadding="@dimen/dp20"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/txt_forget_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:gravity="end"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/color_cus_blue"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textColor="@color/color_white"
            android:background="@drawable/button_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bạn chưa có tài khoản?"/>
            <TextView
                android:id="@+id/txt_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Đăng kí tài khoản"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/color_cus_blue"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>