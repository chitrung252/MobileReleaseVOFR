<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Thông tin tài khoản"
        android:textColor="@color/color_cus_blue"
        android:textSize="25sp"/>

    <LinearLayout
        android:id="@+id/lnl_update_info_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và Tên"
            android:textColor="@color/color_cus_light_gray" />
        <TextView
            android:id="@+id/txt_name_account"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:text=""
            android:textSize="@dimen/sp18"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Email"
            android:textColor="@color/color_cus_light_gray" />

        <TextView
            android:id="@+id/txt_email_account"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawablePadding="@dimen/dp20"
            android:paddingTop="5dp"
            android:text=""
            android:textSize="@dimen/sp18"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Số Điện Thoại"
            android:textColor="@color/color_cus_light_gray" />

        <TextView
            android:id="@+id/txt_phone_account"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawablePadding="@dimen/dp20"
            android:paddingTop="5dp"
            android:text=""
            android:textSize="@dimen/sp18"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Địa Chỉ Mặc Định"
            android:textColor="@color/color_cus_light_gray" />
        <TextView
            android:id="@+id/txt_address_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp20"
            android:paddingTop="5dp"
            android:text=""
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/lnl_update_info_2"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_warning"
            android:layout_marginTop="@dimen/dp20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật thông tin cá nhân"
                android:textSize="20dp"
                android:textColor="@color/color_cus_gray"/>
            <TextView
                android:id="@+id/txt_update_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_cus_blue"
                android:text="Tại đây"
                android:textSize="@dimen/dp20"
                android:paddingLeft="@dimen/dp5"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>