<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AccountFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/vector9" />
        <FrameLayout
            android:id="@+id/frm_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center"
            android:background="@drawable/button_oval_background"
            android:layout_marginRight="@dimen/dp20">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="90dp"
        android:src="@mipmap/glasses"
        app:civ_border_color="@color/color_cus_light_gray"
        app:civ_border_width="2dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Thông tin tài khoản"
        android:textColor="@color/color_cus_blue"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Đăng Nhập"
            android:textColor="@color/color_cus_light_gray" />

        <TextView
            android:id="@+id/txt_name_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38"
            android:paddingTop="5dp"
            android:text="admin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Email"
            android:textColor="@color/color_cus_light_gray" />

        <TextView
            android:id="@+id/txt_email_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38"
            android:drawablePadding="@dimen/dp20"
            android:paddingTop="5dp"
            android:text="Admin@gmail.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Số Điện Thoại"
            android:textColor="@color/color_cus_light_gray" />

        <TextView
            android:id="@+id/txt_phone_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38"
            android:drawablePadding="@dimen/dp20"
            android:paddingTop="5dp"
            android:text="090511526" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="Địa Chỉ Mặc Định"
            android:textColor="@color/color_cus_light_gray" />

        <TextView
            android:id="@+id/txt_address_account"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawablePadding="@dimen/dp20"
            android:paddingTop="5dp"
            android:text="496/18 Lã Xuân Oai, Phường Long Thành, Quận 9, TP Hồ Chí Minh " />
    </LinearLayout>


</LinearLayout>