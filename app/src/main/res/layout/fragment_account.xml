<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.AccountFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/vector13" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="200dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="@dimen/dp3"
                    android:layout_marginRight="@dimen/dp20"
                    android:id="@+id/profile_image"
                    android:src="@drawable/vector12"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="5.5"
                android:weightSum="10"
                android:layout_width="0dp"
                android:layout_height="125dp">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_weight="8.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:background="@drawable/edit_text_search_background"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp10"
                        android:orientation="vertical"
                        android:layout_weight="9.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/color_white"
                            android:text="Chi Trung 252"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"
                            android:text="0 đơn hàng"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnl_choose_edit_account"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/radius_linear_oragne">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Chỉnh sửa trang cá nhân "
                        android:textColor="@color/color_white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:clipToPadding="false">

        <View
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/gradient_bg"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/tab_bg"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#ffffff"
            app:tabIndicatorColor="@null"

            app:tabRippleColor="@null"/>

    </FrameLayout>
    <android.support.v4.view.ViewPager
        android:layout_marginRight="@dimen/dp10"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>