<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddressFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp20"
            >
            <EditText
                android:id="@+id/edt_name_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_cus_background"
                android:paddingTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp3"
                android:text=""
                android:drawableRight="@drawable/ic_user_black"
                android:inputType="text"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="3dp"
                android:background="@drawable/text_view_cus_background"
                android:textSize="14sp"
                android:text=" Họ và Tên "
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:textColor="@color/color_white"
                android:gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp25">
            <EditText
                android:id="@+id/edt_email_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_cus_background"
                android:paddingTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp3"
                android:text=""
                android:drawableRight="@drawable/ic_envelope_black"
                android:inputType="text"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="3dp"
                android:background="@drawable/text_view_cus_background"
                android:textSize="14sp"
                android:text=" Địa chỉ Email "
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:textColor="@color/color_white"
                android:gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp25">
            <EditText
                android:id="@+id/edt_phone_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_cus_background"
                android:paddingTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp3"
                android:text=""
                android:drawableRight="@drawable/ic_phone_black"
                android:inputType="number"
                android:maxLines="1"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="3dp"
                android:background="@drawable/text_view_cus_background"
                android:textSize="14sp"
                android:text=" Số điện thoại "
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:textColor="@color/color_white"
                android:gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp25">
            <EditText
                android:id="@+id/edt_address_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_cus_background"
                android:paddingTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp3"
                android:text=""
                android:drawableRight="@drawable/ic_address"
                android:inputType="textMultiLine"
                android:maxLines="1"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="3dp"
                android:background="@drawable/text_view_cus_background"
                android:textSize="14sp"
                android:text=" Địa chỉ GH "
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:textColor="@color/color_white"
                android:gravity="center"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="15sp"
            android:textColor="@color/color_cus_light_gray"
            android:text="Vui lòng nhập thông tin chính xác để thanh toán"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>